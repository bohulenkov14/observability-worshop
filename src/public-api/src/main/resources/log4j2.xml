<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %level [%t] %c{1.} - %msg%n</Property>
    </Properties>

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:JsonLayout.json">
                <EventTemplateAdditionalField key="service.name" value="public-api"/>
            </JsonTemplateLayout>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Reduce noise from Jetty -->
        <Logger name="org.eclipse.jetty" level="WARN"/>
        
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration> 